<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/activity_page" >

	<RelativeLayout
		android:id="@+id/rlMainTabTopbar"
		style="@style/topbar_bg_orange" >

		<LinearLayout
			android:id="@+id/llMainTabLeftContainer"
			style="@style/ll_horizontal_wrap_match"
			android:layout_alignParentLeft="true" >
		</LinearLayout>

		<TextView
			style="@style/topbar_title"
			android:layout_centerHorizontal="true"
			android:text="主页" />

		<LinearLayout
			android:id="@+id/llMainTabRightContainer"
			style="@style/ll_horizontal_wrap_match"
			android:layout_alignParentRight="true" >
		</LinearLayout>
	</RelativeLayout>

	<FrameLayout
		android:id="@+id/flMainTabFragmentContainer"
		style="@style/match_match"
		android:layout_weight="1" >
	</FrameLayout>

	<View style="@style/divider_horizontal_1px_gray" />

	<LinearLayout
		style="@style/ll_horizontal_match_wrap"
		android:layout_height="@dimen/topbar_height"
		android:background="@color/orange_btn"
		android:paddingTop="4dp" >

		<LinearLayout
			android:id="@+id/llMainTabTab0"
			style="@style/bottom_tab_ll"
			android:layout_weight="1" >

			<ImageView
				android:id="@+id/ivMainTabTab0"
				style="@style/bottom_tab_iv"
				android:src="@drawable/help_selector" />

			<TextView
				android:id="@+id/tvMainTabTab0"
				style="@style/bottom_tab_tv"
				android:text="帮" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/llMainTabTab1"
			style="@style/bottom_tab_ll"
			android:layout_weight="1" >

			<ImageView
				android:id="@+id/ivMainTabTab1"
				style="@style/bottom_tab_iv"
				android:src="@drawable/gethelp_selector" />

			<TextView
				android:id="@+id/tvMainTabTab1"
				style="@style/bottom_tab_tv"
				android:text="派" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/llMainTabTab2"
			style="@style/bottom_tab_ll"
			android:layout_weight="1" >

			<ImageView
				android:id="@+id/ivMainTabTab2"
				style="@style/bottom_tab_iv"
				android:src="@drawable/publish_selector" />

			<TextView
				android:id="@+id/tvMainTabTab2"
				style="@style/bottom_tab_tv"
				android:text="发表" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/llMainTabTab3"
			style="@style/bottom_tab_ll"
			android:layout_weight="1" >

			<ImageView
				android:id="@+id/ivMainTabTab3"
				style="@style/bottom_tab_iv"
				android:src="@drawable/message_selector" />

			<TextView
				android:id="@+id/tvMainTabTab3"
				style="@style/bottom_tab_tv"
				android:text="消息" />
		</LinearLayout>

		<LinearLayout
			android:id="@+id/llMainTabTab4"
			style="@style/bottom_tab_ll"
			android:layout_weight="1" >

			<ImageView
				android:id="@+id/ivMainTabTab4"
				style="@style/bottom_tab_iv"
				android:src="@drawable/mine_selector" />

			<TextView
				android:id="@+id/tvMainTabTab4"
				style="@style/bottom_tab_tv"
				android:text="我的" />
		</LinearLayout>
	</LinearLayout>

</LinearLayout>